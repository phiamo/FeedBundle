{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
<div class="row">
    <div class="span6">
        <h1>Invitation required</h1>
        <p>{% trans %}register.invitation.text{% endtrans %}</p>
        <form class="form-inline" action="{{ path('mopa_booksync_email_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">

        {{ form_widget(form_invitation, {'render_fieldset': false, 'label': 'Sign up'}) }}
            <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
        </form>
    </div>
    <div class="span6">
{% include "FOSUserBundle:Registration:register_content.html.twig" %}
    </div>
</div>
{% endblock fos_user_content %}
